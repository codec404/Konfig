FROM ubuntu:22.04

# Prevent interactive prompts
ENV DEBIAN_FRONTEND=noninteractive

# Install build dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    pkg-config \
    autoconf \
    automake \
    libtool \
    curl \
    unzip \
    wget \
    vim \
    gdb \
    valgrind \
    # gRPC and protobuf from Ubuntu repos
    libgrpc++-dev \
    libprotobuf-dev \
    protobuf-compiler \
    protobuf-compiler-grpc \
    # PostgreSQL client
    postgresql-client \
    # Redis client
    redis-tools \
    # Network tools
    netcat \
    iputils-ping \
    net-tools \
    dnsutils \
    # Other dependencies
    libpqxx-dev \
    libhiredis-dev \
    librdkafka-dev \
    libfmt-dev \
    libspdlog-dev \
    libyaml-cpp-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace

# Default command
CMD ["/bin/bash"]